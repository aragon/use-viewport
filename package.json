{
  "name": "use-viewport",
  "version": "0.2.0",
  "author": "Aragon Association <legal@aragon.org>",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --transpileOnly",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "module": "dist/use-wallet.esm.js",
  "size-limit": [
    {
      "path": "dist/use-wallet.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-wallet.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.6.0",
    "@types/lodash": "^4.14.161",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "size-limit": "^4.6.0",
    "tsdx": "^0.14.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "lodash-es": "^4.17.15"
  }
